# React开发环境优化配置
# 启用快速刷新
FAST_REFRESH=true

# 禁用source map生成以加快构建速度
GENERATE_SOURCEMAP=false

# 禁用ESLint在构建时运行
ESLINT_NO_DEV_ERRORS=true
EXTEND_ESLINT=true

# 启用webpack缓存
WEBPACK_CACHE=true

# 减少bundle分析
ANALYZE=false

# 优化开发服务器
WDS_SOCKET_HOST=localhost
WDS_SOCKET_PORT=3000

# 跳过预检查以加快启动
SKIP_PREFLIGHT_CHECK=true

# 设置内存限制
NODE_OPTIONS=--max_old_space_size=4096

# 启用增量编译
TSC_COMPILE_ON_ERROR=true

# 禁用类型检查以加快启动（仅开发环境）
TSC_WATCHFILE=UseFsEventsWithFallbackDynam